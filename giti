#!/bin/bash
# giti wrapper script

# Capture the user's current working directory FIRST (before any other operations)
export GITI_ORIGINAL_CWD="$(pwd)"

# Now get the script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Execute the main script
python3 "$SCRIPT_DIR/main.py" "$@" 